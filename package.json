{
  "name": "robot-cockpit",
  "version": "1.0.0",
  "description": "Robot Cockpit - Multi-screen web application for ROS2 data visualization",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "node backend/server.js",
    "install:all": "PUPPETEER_SKIP_DOWNLOAD=true npm install && cd frontend && npm install"
  },
  "keywords": [
    "ros2",
    "robot",
    "cockpit",
    "multi-screen"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "ws": "^8.14.2",
    "puppeteer": "^21.5.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}

